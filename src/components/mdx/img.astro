---
const {
  alt = "",
  title,
  src = "",
  class: className,
  loading = "lazy",
  ["data-fullsrc"]: fullSrc,
  ["data-thumbnail"]: thumbnailFlag,
  ...rest
} = Astro.props;

const caption = title ?? alt;
const dataThumbnail = thumbnailFlag ?? (fullSrc ? "true" : undefined);
---

<figure class="mdx-image">
  <img
    {...rest}
    src={src}
    alt={alt}
    data-fullsrc={fullSrc}
    data-thumbnail={dataThumbnail}
    class={["mdx-image__media", className].filter(Boolean).join(" ")}
    loading={loading}
    decoding="async"
  />
  {caption && <figcaption class="mdx-image__caption">{caption}</figcaption>}
</figure>

<style is:inline>
  .mdx-image {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 2rem 0;
  }

  .mdx-image__media {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
  }

  .mdx-image__caption {
    font-size: 0.85rem;
    color: var(--text-secondary);
    text-align: center;
  }
</style>
